@model AppEL.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="auth-page py-5" data-aos="fade-up">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="auth-wrapper">
                    <div class="row g-0">
                        <div class="col-lg-6 d-none d-lg-block">
                            <div class="auth-image-wrapper">
                                <div class="auth-image">
                                    <div class="overlay"></div>
                                    <div class="auth-quote">
                                        <div class="quote-icon">
                                            <i class="fas fa-quote-left"></i>
                                        </div>
                                        <p class="quote-text">Hãy học tập như thể bạn sẽ sống mãi mãi, hãy sống như thể ngày mai là ngày cuối cùng</p>
                                        <p class="quote-author">- Mahatma Gandhi</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="auth-form-container">
                                <div class="auth-header text-center mb-4">
                                    <h2 class="auth-title">@ViewData["Title"]</h2>
                                    <p class="auth-subtitle">Nhập email của bạn để khôi phục mật khẩu</p>
                                </div>
                                
                                <form method="post" asp-action="ForgotPassword" class="auth-form">
                                    @if (ViewData["SuccessMessage"] != null)
                                    {
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <div class="d-flex">
                                                <div class="me-3">
                                                    <i class="fas fa-check-circle fa-lg"></i>
                                                </div>
                                                <div>
                                                    @ViewData["SuccessMessage"]
                                                </div>
                                            </div>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }

                                    @if (!ViewData.ModelState.IsValid)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <div class="d-flex">
                                                <div class="me-3">
                                                    <i class="fas fa-exclamation-circle fa-lg"></i>
                                                </div>
                                                <div>
                                                    <div asp-validation-summary="ModelOnly" class="list-unstyled mb-0"></div>
                                                </div>
                                            </div>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }
                                    
                                    <div class="form-group mb-4">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-envelope"></i>
                                            </span>
                                            <input asp-for="Email" class="form-control" placeholder="Nhập email đã đăng ký" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>
                                    
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block w-100">
                                            <i class="fas fa-paper-plane me-2"></i>Gửi mã xác nhận
                                        </button>
                                    </div>
                                </form>
                                
                                <div class="text-center mt-3">
                                    <p class="mb-0"><a asp-action="Login" class="auth-link"><i class="fas fa-arrow-left me-1"></i> Quay lại đăng nhập</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
